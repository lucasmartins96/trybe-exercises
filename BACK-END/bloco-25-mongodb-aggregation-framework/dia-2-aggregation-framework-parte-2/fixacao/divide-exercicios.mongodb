// Calcule qual será o preço de venda de cada produto caso haja uma promoção de 50% de desconto.
use ('storage');
db.products.aggregate([{
  $project: {
    _id: 0,
    name: 1,
    sale_price: 1,
    precoComDesconto: {
      $multiply: [
        "$sale_price",
        { $divide: [50, 100] }
      ]
    }
  }
}]);
